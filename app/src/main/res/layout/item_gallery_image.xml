<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_gallery_image_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_gallery_image_height"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/item_gallery_image_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/item_gallery_name_text_size"
            android:paddingBottom="@dimen/item_gallery_size_padding_bottom"
            android:paddingStart="@dimen/item_gallery_padding"
            android:paddingEnd="@dimen/item_gallery_padding"
            tools:text="Image name" />

        <TextView
            android:id="@+id/item_gallery_image_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/item_gallery_size_text_size"
            android:paddingStart="@dimen/item_gallery_padding"
            android:paddingEnd="@dimen/item_gallery_padding"
            android:paddingBottom="@dimen/item_gallery_size_padding_bottom"
            tools:text="1 mb" />

        <TextView
            android:id="@+id/item_gallery_image_hash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/item_gallery_hash_text_size"
            android:paddingStart="@dimen/item_gallery_padding"
            android:paddingEnd="@dimen/item_gallery_padding"
            android:paddingBottom="@dimen/item_gallery_padding"
            tools:text="5sx004rgew1sregrtbgbb" />

    </LinearLayout>

</android.support.v7.widget.CardView>